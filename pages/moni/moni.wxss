/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
  padding-top: env(safe-area-inset-top); /* 适配刘海屏 */
}

.top-image-container {
  width: 100%;
  height: 750rpx; /* 根据需要调整 */
  position: relative;
}
.top-image {
  width: 100%;
  height: 100%;
}

.back-button {
  position: absolute;
  top: 100rpx;
  left: 20rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.7); /* 半透明背景 */
  border: none;
  padding: 10rpx;
  border-radius: 50%;
  font-size: 50rpx;
  line-height: 40rpx;
  text-align: center;
}

.section {
  width: 100%;
  padding: 20rpx;
}
.section-title {
  font-size: 70rpx;
  font-weight: bold;
  color: #2c3d68;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  text-shadow: 10rpx 10rpx 50rpx gray;
}

.scroll-container {
  flex-direction: flex;
  width: 750rpx;
  white-space: nowrap;
  margin-top: 40rpx;
  display: flex;
}
.scroll-item{
  background-color: #ffe5e4; /* 按钮背景颜色 */
  padding: 0rpx 0rpx; 
  border-radius: 40rpx; /* 圆角效果 */
  margin-right: 10rpx; /* 右外边距，增加按钮间距 */
  font-size: 65rpx;
  font-weight: 550;
  color: #333; /* 按钮文字颜色 */
  margin-left: 50rpx;
  text-align:center;
  align-items: center;
  justify-content: center;
  display: inline-block;
  width: 300rpx;
  height: 100rpx;
  border: 5px solid transparent;
}
.scroll-item-active {
  border-color: #2c3d68; /* 活跃时边框颜色 */
}

.player{
  width: 100%;
  height: 15%;
}
.bofang{
  width: 200rpx;
  height: 200rpx;
  margin-left: 270rpx;
}

.custom-button {
  width: 100%;
  display: flex;
  justify-content: center; /* 水平居中 */
  margin-top: 10rpx; /* 顶部外边距，增加与上方内容间距 */
}
.custom-button-text {
  width: 500rpx;
  height: 150rpx;
  background-color: #2c3d68; /* 按钮背景颜色 */
  color: #ffe5e4; /* 按钮文字颜色 */
  /* padding: 15rpx 30rpx; 内边距 */
  border-radius: 50rpx; /* 圆角效果 */
  font-size: 60rpx;
}

