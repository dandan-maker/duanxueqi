.bgImg {
  width: 100%;
  height: 100%;
  position: fixed; 
  background-size: 100% 100%;
  opacity: 30%;
  z-index: -1;
}

.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.sliders {
  display: flex;
  justify-content: space-between;
}

.left-sliders,
.right-sliders {
  width: 50vw; /* 设置宽度为屏幕的一半 */
}

.slider-container {
  margin-bottom: 40rpx;
}

.label {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}

.value {
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

